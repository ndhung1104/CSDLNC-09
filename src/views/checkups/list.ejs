<!DOCTYPE html>
<html lang="vi">

<head><%- include('../partials/common/head') %>
        <link rel="stylesheet" href="/css/management-styles.css">
</head>

<body>
    <div class="app-wrapper">
        <%- include('../partials/management/navbar') %>
            <div class="d-flex flex-grow-1">
                <%- include('../partials/management/sidebar') %>
                    <main class="flex-grow-1 p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h1 class="h3 mb-0">
                                <%= title %>
                            </h1>
                            <a href="/checkups/create" class="btn btn-primary"><i class="bi bi-plus-lg me-2"></i>Tạo
                                phiếu khám</a>
                        </div>
                        <form method="GET" class="row g-3 align-items-end mb-3">
                            <div class="col-md-3">
                                <label class="form-label">Search (pet/customer)</label>
                                <input type="text" class="form-control" name="q" value="<%= q || '' %>">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Status</label>
                                <select class="form-select" name="status">
                                    <option value="" <%= !status ? 'selected' : '' %>>All</option>
                                    <option value="pending" <%= status === 'pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="in_progress" <%= status === 'in_progress' ? 'selected' : '' %>>In progress</option>
                                    <option value="completed" <%= status === 'completed' ? 'selected' : '' %>>Completed</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">From</label>
                                <input type="date" class="form-control" name="fromDate" value="<%= fromDate || '' %>">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">To</label>
                                <input type="date" class="form-control" name="toDate" value="<%= toDate || '' %>">
                            </div>
                            <div class="col-md-3 d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Apply</button>
                                <a href="/checkups" class="btn btn-outline-secondary">Clear</a>
                            </div>
                        </form>
                        <div class="card">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Ngày</th>
                                            <th>Thú cưng</th>
                                            <th>Khách hàng</th>
                                            <th>Bác sĩ</th>
                                            <th>Trạng thái</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (checkups.length===0) { %>
                                            <tr>
                                                <td colspan="7" class="text-center text-muted py-4">Chưa có phiếu khám
                                                </td>
                                            </tr>
                                            <% } else { checkups.forEach(c=> { %>
                                                <tr>
                                                    <td>
                                                        <%= c.id %>
                                                    </td>
                                                    <td>
                                                        <%= c.date ? new Date(c.date).toLocaleDateString('vi-VN') : '-'
                                                            %>
                                                    </td>
                                                    <td><a href="/pets/<%= c.petId %>">
                                                            <%= c.petName %>
                                                        </a></td>
                                                    <td><a href="/customers/<%= c.customerId %>">
                                                            <%= c.customerName %>
                                                        </a></td>
                                                    <td>
                                                        <%= c.vetName %>
                                                    </td>
                                                    <td>
                                                        <% const statusText = c.status || ''; %>
                                                        <% const normalizedStatus = statusText.normalize('NFD').replace(/[\u0300-\u036f]/g, '').toLowerCase(); %>
                                                        <% const isCompleted = normalizedStatus.includes('hoan') || normalizedStatus.includes('complete'); %>
                                                        <% const isPending = normalizedStatus.includes('cho') || normalizedStatus.includes('pending'); %>
                                                        <span class="badge bg-<%= isCompleted ? 'success' : isPending ? 'warning' : 'secondary' %>">
                                                            <%= c.status %>
                                                        </span>
                                                    </td>
                                                    <td><a href="/checkups/<%= c.id %>"
                                                            class="btn btn-sm btn-outline-primary">Chi tiết</a></td>
                                                </tr>
                                                <% }) } %>
                                    </tbody>
                                </table>
                            </div>
                            <% if (totalPages> 1) { %>
                                <div class="card-footer d-flex justify-content-center pt-3">
                                    <nav>
                                        <ul class="pagination">
                                            <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                                                <a class="page-link"
                                                    href="?page=<%= page - 1 %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>">Trước</a>
                                            </li>
                                            <% let start=Math.max(1, page - 1); let end=Math.min(totalPages,
                                                page + 1); if (start> 1) { %>
                                                <li class="page-item">
                                                    <a class="page-link"
                                                        href="?page=1&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>">1</a>
                                                </li>
                                                <% if (start> 2) { %>
                                                    <li class="page-item disabled"><span class="page-link">...</span>
                                                    </li>
                                                    <% } %>
                                                        <% } %>

                                                            <% for(let i=start; i <=end; i++) { %>
                                                                <li
                                                                    class="page-item <%= page === i ? 'active' : '' %>">
                                                                    <a class="page-link"
                                                                        href="?page=<%= i %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>">
                                                                        <%= i %>
                                                                    </a>
                                                                </li>
                                                                <% } %>

                                                                    <% if (end < totalPages) { %>
                                                                        <% if (end < totalPages - 1) { %>
                                                                            <li class="page-item disabled"><span
                                                                                    class="page-link">...</span></li>
                                                                            <% } %>
                                                                                <li class="page-item">
                                                                                    <a class="page-link"
                                                                                        href="?page=<%= totalPages %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>">
                                                                                        <%= totalPages %>
                                                                                    </a>
                                                                                </li>
                                                                                <% } %>
                                                                                    <li
                                                                                        class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                                                                                        <a class="page-link"
                                                                                            href="?page=<%= page + 1 %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>">Sau</a>
                                                                                    </li>
                                        </ul>
                                    </nav>
                                </div>
                                <% } %>
                        </div>
                    </main>
            </div>
    </div>
    <%- include('../partials/common/scripts') %>
</body>

</html>
