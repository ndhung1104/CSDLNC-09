<!DOCTYPE html>
<html lang="vi">

<head><%- include('../partials/common/head') %>
        <link rel="stylesheet" href="/css/management-styles.css">
</head>

<body>
    <div class="app-wrapper">
        <%- include('../partials/management/navbar') %>
            <div class="d-flex flex-grow-1">
                <%- include('../partials/management/sidebar') %>
                    <main class="flex-grow-1 p-4">
                        <h1 class="h3 mb-4">
                            <%= title %>
                        </h1>
                        <% if (error) { %>
                            <div class="alert alert-danger">
                                <%= error %>
                            </div>
                            <% } %>
                                <div class="card">
                                    <div class="card-body">
                                        <form method="POST" action="/pets/create">
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <label class="form-label">ID Khách hàng <span
                                                            class="text-danger">*</span></label>
                                                    <input type="number" class="form-control" name="customerId"
                                                        value="<%= customerId %>" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="form-label">Tên thú cưng <span
                                                            class="text-danger">*</span></label>
                                                    <input type="text" class="form-control" name="name" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="form-label">Giống <span
                                                            class="text-danger">*</span></label>
                                                    <select class="form-select" name="breedId" required>
                                                        <% breeds.forEach(b=> { %>
                                                            <option value="<%= b.id %>">
                                                                <%= b.name %> (<%= b.type %>)
                                                            </option>
                                                            <% }) %>
                                                    </select>
                                                </div>
                                                <div class="col-md-3">
                                                    <label class="form-label">Giới tính <span
                                                            class="text-danger">*</span></label>
                                                    <select class="form-select" name="gender" required>
                                                        <option value="Nam">Đực (Nam)</option>
                                                        <option value="Nữ">Cái (Nữ)</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-3">
                                                    <label class="form-label">Tình trạng sức khỏe</label>
                                                    <input type="text" class="form-control" name="healthStatus"
                                                        value="Khỏe mạnh">
                                                </div>
                                            </div>
                                            <div class="mt-4">
                                                <button type="submit" class="btn btn-primary"><i
                                                        class="bi bi-check-lg me-2"></i>Thêm thú cưng</button>
                                                <a href="/customers/<%= customerId %>"
                                                    class="btn btn-outline-secondary ms-2">Hủy</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                    </main>
            </div>
    </div>
    <%- include('../partials/common/scripts') %>
</body>

</html>