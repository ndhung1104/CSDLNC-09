<!DOCTYPE html>
<html lang="vi">

<head><%- include('../partials/common/head') %>
        <link rel="stylesheet" href="/css/management-styles.css">
</head>

<body>
    <div class="app-wrapper">
        <%- include('../partials/management/navbar') %>
            <div class="d-flex flex-grow-1">
                <%- include('../partials/management/sidebar') %>
                    <main class="flex-grow-1 p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h1 class="h3 mb-0">
                                <%= title %>
                            </h1>
                        </div>

                        <form class="mb-4" method="GET">
                            <div class="input-group">
                                <select class="form-select" name="searchBy" style="max-width: 160px;">
                                    <option value="pet" <%=(typeof searchBy==='undefined' || searchBy==='pet' )
                                        ? 'selected' : '' %>>Tên thú cưng</option>
                                    <option value="owner" <%=(typeof searchBy !=='undefined' && searchBy==='owner' )
                                        ? 'selected' : '' %>>Tên chủ</option>
                                </select>
                                <input type="text" class="form-control" name="search"
                                    placeholder="Nhập từ khóa tìm kiếm..." value="<%= search || '' %>">
                                <button class="btn btn-outline-secondary" type="submit"><i
                                        class="bi bi-search"></i></button>
                            </div>
                        </form>

                        <div class="card">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Tên</th>
                                            <th>Giống</th>
                                            <th>Loại</th>
                                            <th>Giới tính</th>
                                            <th>Chủ</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (pets.length===0) { %>
                                            <tr>
                                                <td colspan="7" class="text-center text-muted py-4">Chưa có thú cưng
                                                </td>
                                            </tr>
                                            <% } %>
                                                <% pets.forEach(p=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= p.id %>
                                                        </td>
                                                        <td><strong>
                                                                <%= p.name %>
                                                            </strong></td>
                                                        <td>
                                                            <%= p.breedName %>
                                                        </td>
                                                        <td>
                                                            <%= p.typeOfPet %>
                                                        </td>
                                                        <td>
                                                            <%= p.gender %>
                                                        </td>
                                                        <td><a href="/customers/<%= p.customerId %>">
                                                                <%= p.ownerName %>
                                                            </a></td>
                                                        <td><a href="/pets/<%= p.id %>"
                                                                class="btn btn-sm btn-outline-primary">Chi tiết</a></td>
                                                    </tr>
                                                    <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <% if (totalPages> 1) { %>
                                <div class="card-footer d-flex justify-content-center pt-3">
                                    <nav>
                                        <ul class="pagination">
                                            <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                                                <a class="page-link"
                                                    href="?page=<%= page - 1 %>&search=<%= search || '' %>&searchBy=<%= typeof searchBy !== 'undefined' ? searchBy : 'pet' %>">Trước</a>
                                            </li>
                                            <% let start=Math.max(1, page - 1); let end=Math.min(totalPages,
                                                page + 1); if (start> 1) { %>
                                                <li class="page-item">
                                                    <a class="page-link"
                                                        href="?page=1&search=<%= search || '' %>&searchBy=<%= typeof searchBy !== 'undefined' ? searchBy : 'pet' %>">1</a>
                                                </li>
                                                <% if (start> 2) { %>
                                                    <li class="page-item disabled"><span class="page-link">...</span>
                                                    </li>
                                                    <% } %>
                                                        <% } %>

                                                            <% for(let i=start; i <=end; i++) { %>
                                                                <li
                                                                    class="page-item <%= page === i ? 'active' : '' %>">
                                                                    <a class="page-link"
                                                                        href="?page=<%= i %>&search=<%= search || '' %>&searchBy=<%= typeof searchBy !== 'undefined' ? searchBy : 'pet' %>">
                                                                        <%= i %>
                                                                    </a>
                                                                </li>
                                                                <% } %>

                                                                    <% if (end < totalPages) { %>
                                                                        <% if (end < totalPages - 1) { %>
                                                                            <li class="page-item disabled"><span
                                                                                    class="page-link">...</span></li>
                                                                            <% } %>
                                                                                <li class="page-item">
                                                                                    <a class="page-link"
                                                                                        href="?page=<%= totalPages %>&search=<%= search || '' %>&searchBy=<%= typeof searchBy !== 'undefined' ? searchBy : 'pet' %>">
                                                                                        <%= totalPages %>
                                                                                    </a>
                                                                                </li>
                                                                                <% } %>
                                                                                    <li
                                                                                        class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                                                                                        <a class="page-link"
                                                                                            href="?page=<%= page + 1 %>&search=<%= search || '' %>&searchBy=<%= typeof searchBy !== 'undefined' ? searchBy : 'pet' %>">Sau</a>
                                                                                    </li>
                                        </ul>
                                    </nav>
                                </div>
                                <% } %>
                        </div>
                    </main>
            </div>
    </div>
    <%- include('../partials/common/scripts') %>
</body>

</html>
