<% const bp = typeof basePath !== 'undefined' ? basePath : '/customer'; %>
<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-5">
        <div class="customer-card card p-4">
          <div class="text-center mb-4">
            <i class="bi bi-heart-pulse-fill text-primary" style="font-size: 3rem;"></i>
            <h3 class="mt-3">Customer Login</h3>
            <p class="text-muted">Access your pet care account</p>
          </div>

          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>

          <div class="alert alert-info small" role="alert">
            <strong>Test accounts (seeded)</strong>
            <ul class="mb-2">
              <li>nguyenvanan@gmail.com / customer_pwd_001</li>
              <li>tranthiminh@gmail.com / customer_pwd_002</li>
              <li>lehoangcuong@gmail.com / customer_pwd_003</li>
            </ul>
            <div class="text-muted">Example format: user4@example.com / your_password</div>
          </div>

          <form action="<%= bp %>/login" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email or Phone</label>
              <input type="text" class="form-control" id="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="remember" name="remember">
              <label class="form-check-label" for="remember">Remember me</label>
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
            <div class="text-center">
              <a href="<%= bp %>/forgot-password" class="text-muted small">Forgot password?</a>
            </div>
          </form>
          <hr class="my-4">
          <div class="text-center">
            <p class="text-muted mb-2">Don't have an account?</p>
            <a href="<%= bp %>/register" class="btn btn-outline-primary">Create Account</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
