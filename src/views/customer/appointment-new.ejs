<% const bp = typeof basePath !== 'undefined' ? basePath : '/customer'; %>
<section class="py-4 bg-light">
  <div class="container">
    <h2 class="mb-0">Book an Appointment</h2>
    <p class="text-muted mb-0">Schedule a visit for your pet</p>
  </div>
</section>

<section class="py-4">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="customer-card card">
          <div class="card-body p-4">
            <form action="<%= appointment ? (bp + '/appointments/' + appointment.id) : (bp + '/appointments') %>" method="POST" id="appointmentForm">
              <div class="mb-4">
                <h5 class="mb-3">1. Select Your Pet</h5>
                <div class="row g-3">
                  <% if (typeof pets !== 'undefined' && pets && pets.length > 0) { %>
                    <% pets.forEach((pet) => { %>
                      <div class="col-md-6">
                        <input type="radio" class="btn-check" name="petId" id="pet<%= pet.id || pet.petId %>" value="<%= pet.id || pet.petId %>" required>
                        <label class="btn btn-outline-primary w-100 text-start p-3" for="pet<%= pet.id || pet.petId %>">
                          <div class="d-flex align-items-center">
                            <div class="pet-avatar me-3" style="width: 50px; height: 50px; font-size: 1.2rem;">
                              <%= pet.name.substring(0, 1) %>
                            </div>
                            <div>
                              <strong><%= pet.name %></strong>
                              <br>
                              <small class="text-muted"><%= pet.breedName || pet.breed %> â€¢ <%= pet.typeOfPet %></small>
                            </div>
                          </div>
                        </label>
                      </div>
                    <% }); %>
                  <% } else { %>
                    <div class="col-12">
                      <p class="text-muted">No pets found. Please add a pet first.</p>
                    </div>
                  <% } %>
                </div>
              </div>

              <hr>

              <div class="mb-4">
                <h5 class="mb-3">2. Select Branch</h5>
                <label for="branchId" class="form-label">Clinic Location</label>
                <select class="form-select" id="branchId" name="branchId" required>
                  <option value="">Choose a branch...</option>
                  <% if (typeof branches !== 'undefined' && branches && branches.length > 0) { %>
                    <% branches.forEach((branch) => { %>
                      <option value="<%= branch.branchId %>" <%= (appointment && appointment.branchId==branch.branchId) ? 'selected' : '' %>><%= branch.branchName %> - <%= branch.address %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>

              <hr>

              <div class="mb-4">
                <h5 class="mb-3">3. Select Service</h5>
                <label for="serviceId" class="form-label">Service Type</label>
                <select class="form-select" id="serviceId" name="serviceId" required>
                  <option value="">Choose a service...</option>
                  <% if (typeof services !== 'undefined' && services && services.length > 0) { %>
                    <% services.forEach((service) => { %>
                      <option value="<%= service.serviceId %>" <%= (appointment && appointment.serviceId==service.serviceId) ? 'selected' : '' %>><%= service.serviceName %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>

              <hr>

              <div class="mb-4">
                <h5 class="mb-3">4. Select Date &amp; Time</h5>
                <div class="row g-3">
                  <div class="col-md-6">
                    <label for="appointmentDate" class="form-label">Date</label>
                    <input type="date" class="form-control" id="appointmentDate" name="appointmentDate" value="<%= appointment && appointment.date ? new Date(appointment.date).toISOString().split('T')[0] : '' %>" required>
                  </div>
                  <div class="col-md-6">
                    <label for="appointmentTime" class="form-label">Time</label>
                    <select class="form-select" id="appointmentTime" name="appointmentTime" required>
                      <option value="">Select time...</option>
                      <% const timeOptions = ['08:00','09:00','10:00','11:00','13:00','14:00','15:00','16:00','17:00']; %>
                      <% const selectedTime = appointment && appointment.date ? new Date(appointment.date).toISOString().substring(11,16) : '' ; %>
                      <% timeOptions.forEach(t => { %>
                        <option value="<%= t %>" <%= selectedTime===t ? 'selected' : '' %>><%= t %></option>
                      <% }) %>
                    </select>
                  </div>
                </div>
              </div>

              <hr>

              <div class="mb-4">
                <h5 class="mb-3">5. Additional Information (Optional)</h5>
                <label for="notes" class="form-label">Notes or Special Requests</label>
                <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Any specific concerns or requests..."></textarea>
              </div>

              <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                  <i class="bi bi-check-circle me-2"></i>
                  <%= appointment ? 'Update Appointment' : 'Confirm Appointment' %>
                </button>
                <a href="<%= bp %>/appointments" class="btn btn-outline-secondary btn-lg">Cancel</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  (function() {
    const serviceSelect = document.getElementById('serviceId');
    const branchSelect = document.getElementById('branchId');
    const servicesByBranch = <%- JSON.stringify(branchServices || {}) %>;
    const preselectedBranch = '<%= appointment ? appointment.branchId : '' %>';
    const preselectedService = '<%= appointment ? appointment.serviceId : '' %>';

    function renderServices(branchId) {
      while (serviceSelect.firstChild) {
        serviceSelect.removeChild(serviceSelect.firstChild);
      }
      const placeholder = document.createElement('option');
      placeholder.value = '';
      placeholder.textContent = 'Choose a service...';
      serviceSelect.appendChild(placeholder);

      const list = servicesByBranch[branchId] || [];
      list.forEach(s => {
        const opt = document.createElement('option');
        opt.value = s.serviceId;
        opt.textContent = s.serviceName;
        serviceSelect.appendChild(opt);
      });
      if (preselectedService) {
        serviceSelect.value = preselectedService;
      }
    }

    if (branchSelect) {
      branchSelect.addEventListener('change', function() {
        renderServices(this.value);
      });
      const initialBranch = preselectedBranch || (branchSelect.options.length > 1 ? branchSelect.options[1].value : '');
      if (initialBranch) {
        branchSelect.value = initialBranch;
        renderServices(initialBranch);
      }
    }
  })();
</script>
