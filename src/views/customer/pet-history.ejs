<% const bp=typeof basePath !=='undefined' ? basePath : '/customer' ; %>
  <section class="py-4 bg-light">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
          <h2 class="mb-0">Pet History</h2>
          <p class="text-muted mb-0">
            <%= pet && pet.name ? pet.name : 'Pet' %>
          </p>
        </div>
        <a href="<%= bp %>/pets" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-2"></i>
          Back to Pets
        </a>
      </div>
    </div>
  </section>

  <section class="py-4">
    <div class="container">
      <% if (typeof error !=='undefined' && error) { %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
        <% } %>

          <div class="card mb-4">
            <div class="card-body">
              <form class="row g-3 align-items-end" method="GET" action="<%= bp %>/pets/<%= pet.id %>/history">
                <div class="col-md-4">
                  <label class="form-label">From</label>
                  <input type="date" class="form-control" name="fromDate"
                    value="<%= filters && filters.fromDate ? filters.fromDate : '' %>">
                </div>
                <div class="col-md-4">
                  <label class="form-label">To</label>
                  <input type="date" class="form-control" name="toDate"
                    value="<%= filters && filters.toDate ? filters.toDate : '' %>">
                </div>
                <div class="col-md-4">
                  <label class="form-label">Status</label>
                  <select class="form-select" name="status">
                    <option value="" <%=filters && !filters.status ? 'selected' : '' %>>All</option>
                    <option value="pending" <%=filters && filters.status==='pending' ? 'selected' : '' %>>Pending
                    </option>
                    <option value="in progress" <%=filters && filters.status==='in progress' ? 'selected' : '' %>>In
                      progress</option>
                    <option value="completed" <%=filters && filters.status==='completed' ? 'selected' : '' %>>Completed
                    </option>
                  </select>
                </div>
                <div class="col-12 d-flex gap-2">
                  <button type="submit" class="btn btn-primary">Apply Filters</button>
                  <a class="btn btn-outline-secondary" href="<%= bp %>/pets/<%= pet.id %>/history">Clear</a>
                </div>
              </form>
            </div>
          </div>

          <div class="row g-4">
            <div class="col-lg-6">
              <div class="customer-card card h-100">
                <div class="card-body">
                  <h5 class="card-title mb-2">
                    <%= pet && pet.name ? pet.name : '-' %>
                  </h5>
                  <p class="text-muted mb-3">
                    <%= pet && pet.breed ? pet.breed : '-' %>
                  </p>
                  <div class="row g-2 text-start">
                    <div class="col-6">
                      <small class="text-muted">Type</small>
                      <div><strong>
                          <%= pet && pet.type ? pet.type : '-' %>
                        </strong></div>
                    </div>
                    <div class="col-6">
                      <small class="text-muted">Gender</small>
                      <div><strong>
                          <%= pet && pet.gender ? pet.gender : '-' %>
                        </strong></div>
                    </div>
                    <div class="col-6">
                      <small class="text-muted">Birthdate</small>
                      <div><strong>
                          <%= pet && pet.birthdate ? new Date(pet.birthdate).toLocaleDateString('en-US') : '-' %>
                        </strong></div>
                    </div>
                    <div class="col-6">
                      <small class="text-muted">Health</small>
                      <div><strong>
                          <%= pet && pet.healthStatus ? pet.healthStatus : '-' %>
                        </strong></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="customer-card card h-100">
                <div class="card-body">
                  <h5 class="card-title mb-3">Summary</h5>
                  <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Checkups</span>
                    <strong>
                      <%= (checkups && checkups.length) || 0 %>
                    </strong>
                  </div>
                  <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Purchases</span>
                    <strong>
                      <%= (receipts && receipts.length) || 0 %>
                    </strong>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-4">
            <h4 class="mb-3">Checkup History</h4>
            <div class="card">
              <div class="table-responsive">
                <table class="table mb-0">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Vet</th>
                      <th>Status</th>
                      <th>Diagnosis</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (checkups && checkups.length> 0) { %>
                      <% checkups.forEach(c=> { %>
                        <tr>
                          <td>
                            <%= c.date ? new Date(c.date).toLocaleDateString('en-US') : '-' %>
                          </td>
                          <td>
                            <%= c.vetName || '-' %>
                          </td>
                          <td>
                            <%= c.status || '-' %>
                          </td>
                          <td>
                            <%= c.diagnosis || '-' %>
                          </td>
                          <td>
                            <a href="<%= bp %>/checkups/<%= c.id %>" class="btn btn-sm btn-outline-primary">Details</a>
                          </td>
                        </tr>
                        <% }) %>
                          <% } else { %>
                            <tr>
                              <td colspan="5" class="text-center text-muted">No checkups</td>
                            </tr>
                            <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <div class="mt-4">
            <h4 class="mb-3">Purchase History</h4>
            <% if (receipts && receipts.length> 0) { %>
              <div class="row g-4">
                <% receipts.forEach(r=> { %>
                  <div class="col-lg-6">
                    <div class="customer-card card h-100">
                      <div class="card-header bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                          <div>
                            <strong>Receipt #<%= r.id %></strong><br>
                            <small class="text-muted">
                              <%= r.date ? new Date(r.date).toLocaleDateString('en-US') : '-' %>
                            </small>
                          </div>
                          <span class="badge bg-secondary-subtle text-secondary">
                            <%= r.status || '-' %>
                          </span>
                        </div>
                      </div>
                      <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                          <span class="text-muted">Branch</span>
                          <strong>
                            <%= r.branchName || '-' %>
                          </strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                          <span class="text-muted">Payment</span>
                          <strong>
                            <%= r.paymentMethod || '-' %>
                          </strong>
                        </div>
                        <h6 class="mb-2">Items</h6>
                        <ul class="list-unstyled mb-3">
                          <% if (r.items && r.items.length> 0) { %>
                            <% r.items.forEach(item=> { %>
                              <% const lineTotal=(item.price || 0) * (item.quantity || 0); %>
                                <li class="d-flex justify-content-between mb-1">
                                  <span>
                                    <%= item.itemName %> (x<%= item.quantity %>)
                                  </span>
                                  <span>
                                    <%= lineTotal.toLocaleString('vi-VN') %> VND
                                  </span>
                                </li>
                                <% }) %>
                                  <% } %>
                        </ul>
                        <div class="d-flex justify-content-between align-items-center">
                          <strong>Total</strong>
                          <strong>
                            <%= (r.total || 0).toLocaleString('vi-VN') %> VND
                          </strong>
                        </div>
                        <div class="mt-3">
                          <a href="<%= bp %>/receipts/<%= r.id %>" class="btn btn-outline-primary btn-sm w-100">View
                            Receipt</a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% }) %>
              </div>
              <% } else { %>
                <div class="text-center py-4 text-muted">No purchases for this pet</div>
                <% } %>
          </div>
    </div>
  </section>