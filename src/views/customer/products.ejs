<% const bp = typeof basePath !== 'undefined' ? basePath : '/customer'; %>
<section class="py-4 bg-light">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
      <div>
        <h2 class="mb-0">Products</h2>
        <p class="text-muted mb-0">Search and purchase products</p>
      </div>
      <form class="d-flex" method="GET" action="<%= bp %>/products">
        <input
          type="text"
          class="form-control me-2"
          name="search"
          placeholder="Search products..."
          value="<%= search || '' %>"
        >
        <button class="btn btn-outline-secondary" type="submit">
          <i class="bi bi-search"></i>
        </button>
      </form>
    </div>
  </div>
</section>

<section class="py-4">
  <div class="container">
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <div class="row g-4">
      <% if (typeof products !== 'undefined' && products && products.length > 0) { %>
        <% products.forEach((product) => { %>
          <div class="col-md-6 col-lg-4">
            <div class="customer-card card h-100">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="text-muted mb-3">ID: <%= product.id %></p>
                <div class="mt-auto">
                  <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Price</span>
                    <strong><%= Number(product.price || 0).toLocaleString('vi-VN') %> VND</strong>
                  </div>
                  <a href="<%= bp %>/products/<%= product.id %>/purchase" class="btn btn-primary w-100">
                    Buy Now
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <div class="text-center py-5">
            <i class="bi bi-bag-x text-muted" style="font-size: 4rem;"></i>
            <p class="text-muted mt-3">No products found</p>
          </div>
        </div>
      <% } %>
    </div>

    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
      <nav class="mt-4">
        <ul class="pagination justify-content-center">
          <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
            <a class="page-link" href="?search=<%= search || '' %>&page=<%= page - 1 %>">Previous</a>
          </li>
          <% for (let i = 1; i <= Math.min(totalPages, 10); i++) { %>
            <li class="page-item <%= i === page ? 'active' : '' %>">
              <a class="page-link" href="?search=<%= search || '' %>&page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
          <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="?search=<%= search || '' %>&page=<%= page + 1 %>">Next</a>
          </li>
        </ul>
      </nav>
    <% } %>
  </div>
</section>
