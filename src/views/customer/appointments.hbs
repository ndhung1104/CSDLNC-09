<section class="py-4 bg-light">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h2 class="mb-0">My Appointments</h2>
        <p class="text-muted mb-0">View and manage your appointments</p>
      </div>
      <a href="/customer/appointments/new" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>
        Book Appointment
      </a>
    </div>
  </div>
</section>

<section class="py-4">
  <div class="container">
    <ul class="nav nav-pills mb-4" id="appointmentTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="upcoming-tab" data-bs-toggle="pill" data-bs-target="#upcoming" type="button" role="tab">
          Upcoming
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="past-tab" data-bs-toggle="pill" data-bs-target="#past" type="button" role="tab">
          Past
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="cancelled-tab" data-bs-toggle="pill" data-bs-target="#cancelled" type="button" role="tab">
          Cancelled
        </button>
      </li>
    </ul>

    <div class="tab-content" id="appointmentTabsContent">
      <div class="tab-pane fade show active" id="upcoming" role="tabpanel">
        <div class="row g-3">
          {{#each upcomingAppointments}}
            <div class="col-md-6">
              <div class="customer-card card">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                      <h5 class="card-title mb-1">{{serviceName}}</h5>
                      <span class="badge badge-status-{{toLowerCase status}}">{{status}}</span>
                    </div>
                    <div class="dropdown">
                      <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                      </button>
                      <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/customer/appointments/{{appointmentId}}/edit">Edit</a></li>
                        <li><a class="dropdown-item text-danger" href="#" data-appointment-id="{{appointmentId}}">Cancel</a></li>
                      </ul>
                    </div>
                  </div>
                  <div class="mb-2">
                    <i class="bi bi-calendar text-muted me-2"></i>
                    <strong>{{formatDate appointmentDate}}</strong> at {{appointmentTime}}
                  </div>
                  <div class="mb-2">
                    <i class="bi bi-geo-alt text-muted me-2"></i>
                    {{branchName}}
                  </div>
                  <div class="mb-2">
                    <i class="bi bi-heart text-muted me-2"></i>
                    {{petName}}
                  </div>
                  {{#if notes}}
                    <div class="mt-3 p-2 bg-light rounded">
                      <small class="text-muted">Notes: {{notes}}</small>
                    </div>
                  {{/if}}
                </div>
              </div>
            </div>
          {{else}}
            <div class="col-12">
              <div class="text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                <p class="text-muted mt-3">No upcoming appointments</p>
                <a href="/customer/appointments/new" class="btn btn-primary">Book Your First Appointment</a>
              </div>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="tab-pane fade" id="past" role="tabpanel">
        <div class="row g-3">
          {{#each pastAppointments}}
            <div class="col-md-6">
              <div class="customer-card card">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                      <h5 class="card-title mb-1">{{serviceName}}</h5>
                      <span class="badge badge-status-completed">Completed</span>
                    </div>
                  </div>
                  <div class="mb-2">
                    <i class="bi bi-calendar text-muted me-2"></i>
                    {{formatDate appointmentDate}} at {{appointmentTime}}
                  </div>
                  <div class="mb-2">
                    <i class="bi bi-geo-alt text-muted me-2"></i>
                    {{branchName}}
                  </div>
                  <div class="mb-2">
                    <i class="bi bi-heart text-muted me-2"></i>
                    {{petName}}
                  </div>
                  <div class="mt-3">
                    <a href="/customer/appointments/{{appointmentId}}" class="btn btn-sm btn-outline-primary">View Details</a>
                    <a href="/customer/appointments/new?rebook={{appointmentId}}" class="btn btn-sm btn-outline-secondary">Book Again</a>
                  </div>
                </div>
              </div>
            </div>
          {{else}}
            <div class="col-12">
              <div class="text-center py-5">
                <p class="text-muted">No past appointments</p>
              </div>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="tab-pane fade" id="cancelled" role="tabpanel">
        <div class="row g-3">
          {{#each cancelledAppointments}}
            <div class="col-md-6">
              <div class="customer-card card opacity-75">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                      <h5 class="card-title mb-1">{{serviceName}}</h5>
                      <span class="badge badge-status-cancelled">Cancelled</span>
                    </div>
                  </div>
                  <div class="mb-2">
                    <i class="bi bi-calendar text-muted me-2"></i>
                    {{formatDate appointmentDate}} at {{appointmentTime}}
                  </div>
                  <div class="mb-2">
                    <i class="bi bi-geo-alt text-muted me-2"></i>
                    {{branchName}}
                  </div>
                </div>
              </div>
            </div>
          {{else}}
            <div class="col-12">
              <div class="text-center py-5">
                <p class="text-muted">No cancelled appointments</p>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
