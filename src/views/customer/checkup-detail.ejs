<% const bp=typeof basePath !=='undefined' ? basePath : '/customer' ; %>
    <section class="py-4 bg-light">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h2 class="mb-0">Checkup Details</h2>
                    <p class="text-muted mb-0">
                        <%= checkup.petName || 'Pet' %> - <%= checkup.date ? new
                                Date(checkup.date).toLocaleDateString('en-US', { month: 'short' , day: 'numeric' ,
                                year: 'numeric' }) : '' %>
                    </p>
                </div>
                <a href="<%= bp %>/pets/<%= checkup.petId %>/history" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Back to History
                </a>
            </div>
        </div>
    </section>

    <section class="py-4">
        <div class="container">
            <% if (typeof error !=='undefined' && error) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>

                    <div class="row g-4">
                        <div class="col-lg-6">
                            <div class="customer-card card h-100">
                                <div class="card-header bg-white">
                                    <h5 class="mb-0"><i class="bi bi-clipboard-pulse me-2"></i>Checkup Information</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-6">
                                            <small class="text-muted">Date</small>
                                            <div><strong>
                                                    <%= checkup.date ? new
                                                        Date(checkup.date).toLocaleDateString('en-US', { month: 'short'
                                                        , day: 'numeric' , year: 'numeric' }) : '-' %>
                                                </strong></div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Status</small>
                                            <div>
                                                <% const statusText=checkup.status || '' ; %>
                                                    <% const
                                                        normalizedStatus=statusText.normalize('NFD').replace(/[\u0300-\u036f]/g, ''
                                                        ).toLowerCase(); %>
                                                        <% const isCompleted=normalizedStatus.includes('hoan') ||
                                                            normalizedStatus.includes('complete'); %>
                                                            <span
                                                                class="badge bg-<%= isCompleted ? 'success' : 'warning' %>-subtle text-<%= isCompleted ? 'success' : 'warning' %>">
                                                                <%= checkup.status %>
                                                            </span>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Branch</small>
                                            <div><strong>
                                                    <%= checkup.branchName || '-' %>
                                                </strong></div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Veterinarian</small>
                                            <div><strong>
                                                    <%= checkup.vetName || '-' %>
                                                </strong></div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Pet</small>
                                            <div><strong>
                                                    <%= checkup.petName || '-' %>
                                                </strong></div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Service</small>
                                            <div><strong>
                                                    <%= checkup.serviceName || '-' %>
                                                </strong></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="customer-card card h-100">
                                <div class="card-header bg-white">
                                    <h5 class="mb-0"><i class="bi bi-journal-medical me-2"></i>Diagnosis & Notes</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <small class="text-muted">Symptoms</small>
                                        <p class="mb-0">
                                            <%= checkup.symptoms || 'No symptoms recorded' %>
                                        </p>
                                    </div>
                                    <hr>
                                    <div class="mb-3">
                                        <small class="text-muted">Diagnosis</small>
                                        <p class="mb-0">
                                            <%= checkup.diagnosis || 'No diagnosis yet' %>
                                        </p>
                                    </div>
                                    <% if (checkup.followUpVisit) { %>
                                        <hr>
                                        <div>
                                            <small class="text-muted">Follow-up Visit</small>
                                            <p class="mb-0"><strong>
                                                    <%= new Date(checkup.followUpVisit).toLocaleDateString('en-US', {
                                                        month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                                                </strong></p>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <div class="customer-card card">
                            <div class="card-header bg-white">
                                <h5 class="mb-0"><i class="bi bi-capsule me-2"></i>Prescription</h5>
                            </div>
                            <div class="card-body">
                                <% if (typeof prescriptionItems !=='undefined' && prescriptionItems &&
                                    prescriptionItems.length> 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>#</th>
                                                    <th>Item</th>
                                                    <th class="text-end">Quantity</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% prescriptionItems.forEach((item, index)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td>
                                                            <%= item.productName %>
                                                        </td>
                                                        <td class="text-end">
                                                            <%= item.quantity %>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } else { %>
                                        <p class="text-muted text-center py-3 mb-0">No prescription items</p>
                                        <% } %>
                            </div>
                        </div>
                    </div>
        </div>
    </section>