<!DOCTYPE html>
<html lang="vi">

<head><%- include('../partials/common/head') %>
        <link rel="stylesheet" href="/css/management-styles.css">
</head>

<body>
    <div class="app-wrapper">
        <%- include('../partials/management/navbar') %>
            <div class="d-flex flex-grow-1">
                <%- include('../partials/management/sidebar') %>
                    <main class="flex-grow-1 p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h1 class="h3 mb-0">
                                <%= title %>
                            </h1>
                            <a href="/receipts/create" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-2"></i>Tạo hóa đơn
                            </a>
                        </div>

                        <!-- Filters -->
                        <div class="card mb-3">
                            <div class="card-body">
                                <form method="GET" class="row g-3 align-items-end">
                                    <div class="col-md-3">
                                        <label class="form-label">Search (customer/receipt)</label>
                                        <input type="text" class="form-control" name="q" value="<%= q || '' %>">
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Status</label>
                                        <select name="status" class="form-select">
                                            <option value="" <%= !status ? 'selected' : '' %>>All</option>
                                            <option value="unpaid" <%= status === 'unpaid' ? 'selected' : '' %>>Unpaid</option>
                                            <option value="paid" <%= status === 'paid' ? 'selected' : '' %>>Paid</option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">From</label>
                                        <input type="date" class="form-control" name="fromDate" value="<%= fromDate || '' %>">
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">To</label>
                                        <input type="date" class="form-control" name="toDate" value="<%= toDate || '' %>">
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Sort</label>
                                        <select name="sort" class="form-select">
                                            <option value="status" <%=sort==='status' ? 'selected' : '' %>>Unpaid first</option>
                                            <option value="date" <%=sort==='date' ? 'selected' : '' %>>Newest date</option>
                                            <option value="id" <%=sort==='id' ? 'selected' : '' %>>Receipt ID</option>
                                        </select>
                                    </div>
                                    <div class="col-md-12 d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">Apply</button>
                                        <a href="/receipts" class="btn btn-outline-secondary">Clear</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Ngày</th>
                                            <th>Khách hàng</th>
                                            <th>Chi nhánh</th>
                                            <th>Tổng</th>
                                            <th>Trạng thái</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (receipts.length===0) { %>
                                            <tr>
                                                <td colspan="7" class="text-center text-muted py-4">Chưa có hóa đơn</td>
                                            </tr>
                                            <% } else { receipts.forEach(r=> { %>
                                                <tr class="<%= r.status === 'Chờ thanh toán' ? 'table-warning' : '' %>">
                                                    <td><strong>#<%= r.id %></strong></td>
                                                    <td>
                                                        <%= new Date(r.date).toLocaleDateString('vi-VN') %>
                                                    </td>
                                                    <td>
                                                        <a href="/customers/<%= r.customerId %>">
                                                            <%= r.customerName || '-' %>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <%= r.branchName %>
                                                    </td>
                                                    <td>
                                                        <%= (r.total || 0).toLocaleString('vi-VN') %>đ
                                                    </td>
                                                    <td>
                                                        <span
                                                            class="badge bg-<%= r.status === 'Đã thanh toán' ? 'success' : 'warning' %>">
                                                            <%= r.status %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <a href="/receipts/<%= r.id %>"
                                                            class="btn btn-sm btn-<%= r.status === 'Chờ thanh toán' ? 'primary' : 'outline-primary' %>">
                                                            <%= r.status==='Chờ thanh toán' ? 'Tiếp tục' : 'Chi tiết' %>
                                                        </a>
                                                    </td>
                                                </tr>
                                                <% }) } %>
                                    </tbody>
                                </table>
                            </div>
                            <% if (totalPages> 1) { %>
                                <div class="card-footer d-flex justify-content-center pt-3">
                                    <nav>
                                        <ul class="pagination">
                                            <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                                                <a class="page-link"
                                                    href="?page=<%= page - 1 %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>&sort=<%= sort || 'status' %>">Trước</a>
                                            </li>
                                            <% let start=Math.max(1, page - 1); let end=Math.min(totalPages,
                                                page + 1); if (start> 1) { %>
                                                <li class="page-item">
                                                    <a class="page-link"
                                                        href="?page=1&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>&sort=<%= sort || 'status' %>">1</a>
                                                </li>
                                                <% if (start> 2) { %>
                                                    <li class="page-item disabled"><span class="page-link">...</span>
                                                    </li>
                                                    <% } %>
                                                        <% } %>

                                                            <% for(let i=start; i <=end; i++) { %>
                                                                <li
                                                                    class="page-item <%= page === i ? 'active' : '' %>">
                                                                    <a class="page-link"
                                                                        href="?page=<%= i %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>&sort=<%= sort || 'status' %>">
                                                                        <%= i %>
                                                                    </a>
                                                                </li>
                                                                <% } %>

                                                                    <% if (end < totalPages) { %>
                                                                        <% if (end < totalPages - 1) { %>
                                                                            <li class="page-item disabled"><span
                                                                                    class="page-link">...</span></li>
                                                                            <% } %>
                                                                                <li class="page-item">
                                                                                    <a class="page-link"
                                                                                        href="?page=<%= totalPages %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>&sort=<%= sort || 'status' %>">
                                                                                        <%= totalPages %>
                                                                                    </a>
                                                                                </li>
                                                                                <% } %>
                                                                                    <li
                                                                                        class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                                                                                        <a class="page-link"
                                                                                            href="?page=<%= page + 1 %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>&sort=<%= sort || 'status' %>">Sau</a>
                                                                                    </li>
                                        </ul>
                                    </nav>
                                </div>
                                <% } %>
                        </div>
                    </main>
            </div>
    </div>
    <%- include('../partials/common/scripts') %>
</body>

</html>
