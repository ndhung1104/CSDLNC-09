<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/common/head') %>
    <link rel="stylesheet" href="/css/management-styles.css">
</head>

<body>
    <div class="app-wrapper">
        <%- include('../partials/management/navbar') %>
        <div class="d-flex flex-grow-1">
            <%- include('../partials/management/sidebar') %>
            <main class="flex-grow-1 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0"><%= title %></h1>
                    <a href="/appointments/new" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-2"></i>Walk-in Appointment
                    </a>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>

                <form method="GET" class="row g-3 align-items-end mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Search (customer/service/id)</label>
                        <input type="text" class="form-control" name="q" value="<%= q || '' %>">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Status</label>
                        <select class="form-select" name="status">
                            <option value="" <%= !status ? 'selected' : '' %>>All</option>
                            <option value="pending" <%= status === 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="confirmed" <%= status === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                            <option value="completed" <%= status === 'completed' ? 'selected' : '' %>>Completed</option>
                            <option value="cancelled" <%= status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">From</label>
                        <input type="date" class="form-control" name="fromDate" value="<%= fromDate || '' %>">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">To</label>
                        <input type="date" class="form-control" name="toDate" value="<%= toDate || '' %>">
                    </div>
                    <div class="col-md-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Apply</button>
                        <a href="/appointments" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </form>

                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Date</th>
                                    <th>Customer</th>
                                    <th>Service</th>
                                    <th>Branch</th>
                                    <th>Vet</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (!appointments || appointments.length === 0) { %>
                                    <tr>
                                        <td colspan="8" class="text-center text-muted py-4">No appointments found</td>
                                    </tr>
                                <% } else { %>
                                    <% appointments.forEach(a => { %>
                                        <tr>
                                            <td>#<%= a.id %></td>
                                            <td><%= a.date ? new Date(a.date).toLocaleString('vi-VN') : '-' %></td>
                                            <td>
                                                <% if (a.customerId) { %>
                                                    <a href="/customers/<%= a.customerId %>"><%= a.customerName %></a>
                                                <% } else { %>
                                                    <%= a.customerName || '-' %>
                                                <% } %>
                                            </td>
                                            <td><%= a.serviceName || '-' %></td>
                                            <td><%= a.branchName || '-' %></td>
                                            <td><%= a.vetName || '-' %></td>
                                            <td>
                                                <% const statusText = a.status || ''; %>
                                                <% const normalizedStatus = statusText.normalize('NFD').replace(/[\u0300-\u036f]/g, '').toLowerCase(); %>
                                                <% const isCompleted = normalizedStatus.includes('complete') || normalizedStatus.includes('hoan'); %>
                                                <% const isCancelled = normalizedStatus.includes('cancel') || normalizedStatus.includes('huy'); %>
                                                <% const isPending = normalizedStatus.includes('pending') || normalizedStatus.includes('cho'); %>
                                                <span class="badge bg-<%= isCompleted ? 'success' : isCancelled ? 'secondary' : isPending ? 'warning' : 'primary' %>">
                                                    <%= a.status %>
                                                </span>
                                            </td>
                                            <td>
                                                <form method="POST" action="/appointments/<%= a.id %>/status" class="d-flex gap-2">
                                                    <select class="form-select form-select-sm" name="status">
                                                        <option value="Pending" <%= a.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                                        <option value="Confirmed" <%= a.status === 'Confirmed' ? 'selected' : '' %>>Confirmed</option>
                                                        <option value="Completed" <%= a.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                                                        <option value="Cancelled" <%= a.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                                    </select>
                                                    <button type="submit" class="btn btn-sm btn-outline-primary">Save</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <% if (totalPages > 1) { %>
                    <div class="card-footer d-flex justify-content-center pt-3">
                        <nav>
                            <ul class="pagination">
                                <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                                    <a class="page-link"
                                        href="?page=<%= page - 1 %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>">Prev</a>
                                </li>
                                <% let start=Math.max(1, page - 1); let end=Math.min(totalPages, page + 1); if (start> 1) { %>
                                    <li class="page-item">
                                        <a class="page-link"
                                            href="?page=1&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>">1</a>
                                    </li>
                                    <% if (start> 2) { %>
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    <% } %>
                                <% } %>

                                <% for(let i=start; i <=end; i++) { %>
                                    <li class="page-item <%= page === i ? 'active' : '' %>">
                                        <a class="page-link"
                                            href="?page=<%= i %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                <% } %>

                                <% if (end < totalPages) { %>
                                    <% if (end < totalPages - 1) { %>
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    <% } %>
                                    <li class="page-item">
                                        <a class="page-link"
                                            href="?page=<%= totalPages %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>">
                                            <%= totalPages %>
                                        </a>
                                    </li>
                                <% } %>
                                <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                                    <a class="page-link"
                                        href="?page=<%= page + 1 %>&q=<%= q || '' %>&status=<%= status || '' %>&fromDate=<%= fromDate || '' %>&toDate=<%= toDate || '' %>">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                <% } %>
            </main>
        </div>
    </div>
    <%- include('../partials/common/scripts') %>
</body>

</html>
